@model FiaponSmartCity.Models.TipoPessoa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Moradores - Editar</title>
</head>

<body>
    <h1>Editar Dados</h1>

    <form asp-action="Editar" asp-controller="TipoPessoa" method="post">
        <input type="hidden" asp-for="IdTipo" />
        <div class="form-horizontal">
            <hr />

            <div class="form-group">
                <label>Endereço</label>
                <div class="col-md-10">
                    <input asp-for="Endereco" />
                </div>
            </div>

            <div class="form-group">
                <label>Residente</label>
                <div class="checkbox">
                    <input asp-for="Residente" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="reset" value="Limpar" class="btn btn-default" />
                    <input type="submit" value="Gravar Alteração" class="btn btn-default" />
                </div>
            </div>
            <hr />
        </div>
    </form>

    <div>
        <a asp-controller="TipoPessoa" asp-action="Index">Voltar</a>
    </div>

</body>