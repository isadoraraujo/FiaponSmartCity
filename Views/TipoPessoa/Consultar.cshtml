@model FiaponSmartCity.Models.TipoPessoa

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Moradores - Consultas</title>
</head>
<body>
    <h1>Consultar Moradores</h1>
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <label><b>Endereço Completo:</b></label>
            <div class="col-md-10">
                <span>@Model.Endereco</span>
            </div>
        </div>

        <div class="form-group">
            <label><b>Residente:</b></label>
            <div class="checkbox">
                <span>@Model.Residente</span>
            </div>
        </div>
        <hr />
    </div>
    <div>
        <a asp-controller="TipoPessoa" asp-action="Index">Voltar</a>
    </div>

</body>
</html>